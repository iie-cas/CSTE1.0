IDIR = ./include
ODIR = obj
CFLAGS = -I$(IDIR)
CC = gcc

_DEPS = 
DEPS = $(patsubst %, $(IDIR)/%, $(_DEPS))

_OBJ = cop.o
OBJ = $(patsubst %, $(ODIR)/%, $(_OBJ))

$(ODIR)/%.o: %.c $(DEPS)
	$(CC) -c -g -o $@ $< $(CFLAGS) -masm=intel

vul: $(OBJ)
	$(CC) -g -o $@ $^ $(CFLAGS) -masm=intel

.PHONY: clean
clean: 
	rm -f $(ODIR)/*.o *~ core $(INCDIR)/*~
